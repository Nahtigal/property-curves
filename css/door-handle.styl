.door-handle
  position  absolute
  top       50%
  right     2*GS
  rect      13*PX
  &__part
    position  absolute
    circle    100%
    &--bottom
      background-color #EDEDED
    &--top
      background-color white
      left 1*PX
      top  2*PX
  &__shadow
    position    absolute
    left        GS
    top         0
    width       100%
    height      4*GS
    opacity     .1
    transform   rotate(105deg)
    transform-origin 0% 0%
  &__shadow-inner
    position    absolute
    left        0
    top         0
    background  linear-gradient(to bottom, rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%)
    transform-origin inherit
    rect        100%
    



